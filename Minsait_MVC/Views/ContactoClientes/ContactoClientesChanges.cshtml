@using Minsait_MVC.Models.ViewModel;
@model ContactoClientesVM

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Configuración</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                <a>Clientes</a>
            </li>
            <li class="active">
                <strong>Contacto Clientes</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Crear Contacto</h5>
                    <div class="ibox-tools">

                        <p>
                            <a class="btn btn-success btn-outline" href="@Url.Action("ContactoClientes", "ContactoClientes")">
                                <i class="fa fa-times"></i> Cancelar
                            </a>
                            <a class="btn btn-success btn-outline" id="btnGuardarContacto">
                                <i class="fa fa-save"></i> Guardar
                            </a>
                        </p>
                    </div>


                </div>
                <div class="ibox" id="ibox2">
                    <div class="ibox-content">
                        <div class="sk-spinner sk-spinner-wave">
                            <div class="sk-rect1"></div>
                            <div class="sk-rect2"></div>
                            <div class="sk-rect3"></div>
                            <div class="sk-rect4"></div>
                            <div class="sk-rect5"></div>
                        </div>
                        <form class="form-horizontal" role="form" id="frmContacto" data-role="validator" novalidate="novalidate">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Cliente</label>
                                <div class="col-sm-10">
                                    <select id="selCliente" style="width:100%" validationmessage="Seleccione un cliente" required="required" name="IdCliente"></select>
                                    <span class="k-invalid-msg" data-for="IdCliente"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Nombre Contacto</label>
                                <div class="col-sm-10">
                                    <input id="txtNombreContacto" placeholder="Escriba el nombre del contacto" class="form-control" type="text" required="required" name="NombreContacto" value="@Model.NombreContacto">
                                    <span class="k-invalid-msg" data-for="NombreContacto"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Puesto</label>
                                <div class="col-sm-10">
                                    <input id="txtPuestoContacto" placeholder="Escriba el puesto" class="form-control" type="text" required="required" name="PuestoContacto" value="@Model.PuestoContacto">
                                    <span class="k-invalid-msg" data-for="PuestoContacto"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Correo</label>
                                <div class="col-sm-10">
                                    <input id="txtCorreo" placeholder="Escriba el correo del contacto" class="form-control" type="email" required="required" name="CorreoContacto" value="@Model.CorreoContacto">
                                    <span class="k-invalid-msg" data-for="CorreoContacto"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Número</label>
                                <div class="col-sm-10">
                                    <input id="txtNumeroContacto" placeholder="Escriba el número del contacto" class="form-control" type="text" required="required" name="NumeroContacto" value="@Model.NumeroContacto">
                                    <span class="k-invalid-msg" data-for="NumeroContacto"></span>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>

                            <input type="hidden" id="hdnMov" value="@ViewBag.Mov" />
                            <input id="IdContactoCliente" type="hidden" name="IdContactoCliente" value="@Model.IdContactoCliente">
                            <input type="hidden" id="hdnUrlContacto" value="@Url.Action("ContactoClientes", "ContactoClientes")" />

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input id="IdCliente" type="hidden" name="hdnIdCliente" value="@Model.IdCliente">
</div>


<input type="hidden" id="hdnMov" value="@ViewBag.Mov" />

@section Scripts {
    <script src="~/Scripts/ContactoClientes/ContactoClientesChange.js"></script>
}
